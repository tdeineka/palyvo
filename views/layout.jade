doctype html
html
  head
    title Облік палива
    link(rel='stylesheet', href='/css/style.css')
  body
    -if (session)
      div(width="100%")
        a(href="/") Домівка 
        -if (session.role=='ADMIN' || session.role=='MASTER')
          a(href="/users") Користувачі 
        span(align="right")
          a(href="/users/#{session.id }")= session.name
          a(href="/logout")  Вийти 
    block content
